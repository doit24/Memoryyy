<div id="main_cnt_wrapper">
<div id="yjContentsBody">
<div id="yjMain">
  <%= form_for @board do |f| %>
    <div style="margin: 8px 0">
      <%= f.label :タイトル, style: { 'margin-right' => 8 } %>
      <%= f.text_field :title, placeholder: 'タイトルを書いて', value: '' %>
    </div>
    <div style="margin: 8px 0">
      <%= f.label :画像を選択してください, style: { 'margin-right' => 8 } %>
      <%= f.file_field :image, value: '' %>
    </div>
    <div style="margin: 8px 0">
      <%= f.text_area :content, placeholder: 'あなたのペットのことについて教えて！', style: 'width: 100%;height: 300px;' %>
    </div>
    <div class="row">
      <div class="col10 push1">
      <%= button_tag type: "submit", class: "btn btn--block" do %>
          作成する<i class="icon-arrow-right"></i>
      <% end %>
      </div>
    </div>
  <% end %>
</div>
</div>
</div>

